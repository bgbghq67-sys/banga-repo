<Window x:Class="Banga_Photobooth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banga_Photobooth"
        mc:Ignorable="d"
        Title="Banga Photobooth" 
        Height="800" Width="1200"
        WindowState="Maximized"
        WindowStyle="None">

    <Grid MouseDown="Grid_MouseDown" Cursor="Hand">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image x:Name="LogoImage"
                   Height="428" 
                   Width="840"
                   Stretch="Uniform"
                   MouseDown="LogoImage_MouseDown"/>

            <TextBlock x:Name="StartText"
                   Text="TOUCH SCREEN TO START"
                   FontSize="45"
                   Foreground="#000080"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,50,0,0">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="2" 
                                BlurRadius="4" 
                                Color="Black"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
