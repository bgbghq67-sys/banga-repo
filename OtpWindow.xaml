<Window x:Class="Banga_Photobooth.OtpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Locked" 
        Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStyle="None"
        Background="White">
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/Assets/mainbg.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Locked Overlay -->
        <Border Background="#E6FFFFFF" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch">
            
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Lock Icon -->
                <Viewbox Width="150" Height="150" Margin="0,0,0,40">
                    <Path Data="M12,17A2,2 0 0,0 14,15A2,2 0 0,0 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8H17V6A5,5 0 0,0 12,1A5,5 0 0,0 7,6V8H6A2,2 0 0,0 4,10V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V10A2,2 0 0,0 18,8M9,6A3,3 0 0,1 12,3A3,3 0 0,1 15,6V8H9V6M18,20H6V10H18V20Z" 
                          Fill="#E74C3C" 
                          Stretch="Uniform"/>
                </Viewbox>

                <TextBlock Text="SYSTEM LOCKED" 
                           FontSize="64" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#2C3E50"
                           Margin="0,0,0,20"/>
                
                <TextBlock Text="Please activate from the admin panel" 
                           FontSize="32" 
                           Foreground="#7F8C8D" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Device Info Box -->
                <Border Background="#F8F9FA" 
                        CornerRadius="15" 
                        Padding="40,30" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="2"
                        Margin="0,0,0,40">
                    <StackPanel>
                        <TextBlock Text="DEVICE ID" 
                                   FontSize="16" 
                                   Foreground="#95A5A6" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="MachineIdText" 
                                   Text="Loading..." 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   FontFamily="Consolas"
                                   Foreground="#2C3E50" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Status Indicator -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Ellipse x:Name="StatusDot" 
                             Width="16" Height="16" 
                             Fill="#3498DB" 
                             Margin="0,0,15,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                 From="1" To="0.3" Duration="0:0:0.8"
                                                                 AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock x:Name="StatusText" 
                               Text="Connecting to server..." 
                               FontSize="24" 
                               Foreground="#3498DB" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
